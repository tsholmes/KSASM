.import libdevice
.import libtypes

# constants and macros for interacting with the System device
.ifndef libsystem .macro libsystem
.ns system.

.macro id 1

.region data 1024

data:
  :f64 time: 0
  :u64 hash_param: 0
  :u64 hash: 0
  orbit: .types.orbit(orbit.)
data_end:

.macro init .device.setup($(.system.id), $(system.data), $(system.data_end))

.endns
.endif