# constants and macros for interacting with the System device
.import libdevice

.ifndef libsystem

.macro system_id 1

.region libsystem 1024

system_data:
:f64 system_time: 0
:u64 system_hash_param: 0
:u64 system_hash: 0
system_orbit:
  :u64 system_parent: 0
  :f64 system_periapsis: 0
  :f64 system_apoapsis: 0
  :f64 system_period: 0
system_data_end:

.macro system_init .setup_device($(.system_id), $(system_data), $(system_data_end))

.endif